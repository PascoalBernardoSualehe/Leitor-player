<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="8dp"
    android:paddingVertical="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_album_art"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="Capa do álbum"
        android:scaleType="centerCrop"
        tools:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/tv_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Título da Música" />

        <TextView
            android:id="@+id/tv_song_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#B0B0B0"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="4dp"
            tools:text="Nome do Artista" />

    </LinearLayout>

    <!-- Botão de Opções (inalterado) - Ficará visível na MainActivity, etc. -->
    <ImageButton
        android:id="@+id/btn_song_options"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        android:contentDescription="Opções da música"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@android:color/white"
        android:visibility="visible" /> <!-- Visível por padrão -->

    <!-- NOVO Botão de Remoção - Ficará visível APENAS na tela da playlist -->
    <ImageButton
        android:id="@+id/btn_remove_from_playlist"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="Remover música da playlist"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@android:color/white"
        android:visibility="gone"
        tools:visibility="visible"/> <!-- INVISÍVEL ('gone') por padrão -->

</LinearLayout>
